<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/transparent"  
    android:orientation="vertical">
     
    <!-- 拍照还是选择本地照片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/takePhotoBtn"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:textColor="@color/common_blue_color"
            android:textSize="20sp"
            android:background="@drawable/self_zone_dlg_top_round_shape"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="拍照" /> <!-- android:textColor="#007aff" -->
        
        <View       
	        android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.38"
	        android:background="#7F7878" /> 
	        
        <Button
            android:id="@+id/selectLocalImgBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/common_blue_color"            
            android:textSize="20sp"
            android:background="@drawable/self_zone_dlg_bottom_round_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"            
            android:text="选择本地图片" />
        
        <View       
	        android:layout_width="match_parent"
            android:layout_height="10dp"   
	        android:background="@android:color/transparent" /> 
        
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/common_blue_color"
            android:textSize="20sp"
            android:background="@drawable/self_zone_dlg_round_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>
